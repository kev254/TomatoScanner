<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_margin="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/disease_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#E91E25"
                        android:textSize="30sp"
                        android:textAllCaps="true"
                        android:text="@string/disease_name"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_primary" />

                </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Disease descrption"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="2px"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/disases_desc"
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Posibble Cuases"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="2px"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_primary" />
                    <TextView
                        android:id="@+id/poss_cos"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/disases_cause"
                        android:textColor="#000"
                        android:textSize="10sp"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="8dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000000"
                        android:text="Prevention Methods"/>
                    <View
                        android:layout_width="150dp"
                        android:layout_height="2px"
                        android:layout_marginTop="8dp"
                        android:background="@color/color_primary" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="@string/disase_prev"
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:layout_margin="10dp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content">
                <Button
                    android:id="@+id/btnVet"
                    android:background="@color/color_primary"
                    android:layout_width="180dp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content"
                    android:text="Contact Vetenary"/>
                <Button
                    android:layout_width="180dp"
                    android:textColor="#ffff"
                    android:layout_marginRight="5dp"
                    android:background="@color/themeColor"
                    android:layout_height="wrap_content"
                    android:text="Order chemical"/>

            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>